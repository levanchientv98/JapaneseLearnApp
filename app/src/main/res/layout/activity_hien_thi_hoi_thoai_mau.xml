<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.hoctiengnhat.BaiMinna.HienThiHoiThoaiMau">
    <ListView
        android:id="@+id/lvHTM"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.88"
        android:divider="@color/diriver"
        android:dividerHeight="2dp"
        android:padding="5dp"></ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:background="#413d3d"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:weightSum="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.85"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:weightSum="1"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <TextView
                    android:paddingLeft="10dp"
                    android:textColor="#fff"
                    android:text="sdsdddd"
                    android:layout_weight="0.5"
                    android:id="@+id/txtvtimeHTM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="center_vertical|right"
                    android:textColor="#fff"
                    android:text="sdsdddd"
                    android:layout_weight="0.5"
                    android:id="@+id/txtvtotalHTM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="gravity" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/sbHTM"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5" />
        </LinearLayout>
        <ImageView
            android:id="@+id/playHTM"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:padding="10dp"
            android:src="@drawable/play" />
    </LinearLayout>
</LinearLayout>
