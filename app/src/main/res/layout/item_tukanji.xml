<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtvIDkj"
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="2dp"
        android:paddingTop="10dp"
        android:text="022"
        android:textSize="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtvkj"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/colorPrimary"
            android:textSize="28dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtvAmHankj"
            android:layout_width="65dp"
            android:layout_height="43dp"
            android:gravity="center"
            android:text="NHẤT"
            android:textColor="#000"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/idOnyomi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="Ví dụ:"
                android:textColor="#3e52ac"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/txtvKunyomi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="right"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:text="-)"
                android:paddingLeft="3dp"
                android:textAlignment="gravity"
                android:textColor="#a12e97"
                android:textSize="13dp"
                android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtvChuThichKanji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="center"
            android:paddingRight="8dp"
            android:text="một cái"
            android:textColor="#000"
            android:textSize="14dp"
            android:textStyle="normal" />
    </LinearLayout>
</LinearLayout>