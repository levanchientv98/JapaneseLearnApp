<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chi_tiet_tu_kanji"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.hoctiengnhat.TuKanji.ChiTietTuKanji">

    <LinearLayout
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.07"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/custom_text"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="Từ Kanji"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="0.5"
                android:background="@drawable/custom_text"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:paddingRight="10dp"
                android:text="Vị trí"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/txtvTuKanjiCT2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="TextView"
                android:textColor="@color/colorPrimary"
                android:textSize="27dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtvIDCT2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="TextView"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.07"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/custom_text"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="Âm hán"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/custom_text"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="Nghĩa"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:paddingLeft="8dp"
                android:id="@+id/txtvAmHanCT2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="normal" />

            <TextView
                android:paddingLeft="8dp"
                android:id="@+id/txtvNghiaCT2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textColor="#d4803f"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.07"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textdsOnyomi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/custom_text"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="Onyomi"
                android:textSize="13dp" />

            <TextView
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:id="@+id/textViedw10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/custom_text"
                android:text="Kunyomi"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/txtvOnyomiCT2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtvKunyomi2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textColor="#d4803f"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.08"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textsVidew9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/custom_text"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="Ví dụ"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.41"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/txtvViDuNhatCT2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:text="TextView"
                android:textSize="15dp"
                android:textStyle="normal" />

            <TextView
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/txtvViDu2CT2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.31"
                android:text="TextView"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/txtvViDuVietCT2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.39"
                android:text="TextView"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
